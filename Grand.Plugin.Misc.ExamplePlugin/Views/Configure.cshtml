@model Grand.Plugin.Misc.ExamplePlugin.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="ExamplePlugin" asp-action="Configure" method="post">
    <antiforgery-token />
    <div class="form-horizontal">
        <div class="form-body">
            <div class="form-group">
                <admin-label asp-for="Login" />
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="Login" />
                </div>
            </div>
            <div class="form-group">
                <admin-label asp-for="Password" />
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="Password" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="IsMale" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="IsMale" />
                    <span asp-validation-for="IsMale"></span>
                </div>
            </div>
        </div>
        <div class="form-actions">
            <div class="col-md-offset-3 col-sm-offset-3 col-md-9 col-sm-9">
                <input type="submit" name="save" class="btn green" value="@T("Admin.Common.Save")" />
            </div>
        </div>
    </div>
</form>
